<div class="card text-center">
  <div class="card-header">
  <%= @restaurant.category %>
  </div>
  <div class="card-body">
    <h5 class="card-title">
    <%= @restaurant.name %>
    </h5>
    <p class="card-text">
    <%= @restaurant.address %>
    </p>
    <div class="btn btn-light">
    <%= link_to "Write a Review", new_restaurant_review_path(params[:id]) %>
    </div>
  </div>
  <div class="card-footer text-muted">
    <%= @restaurant.phone_number %>
  </div>
</div>
