<% @restaurants.each do |restaurant| %>
  <div class="container">
    <div class="card m-3">
      <div class="card-header">
        <%= restaurant.category %>
      </div>
      <div class="card-body">
        <h5 class="card-title">
        <%= restaurant.name %>
        </h5>
        <p class="card-text">
        <%= restaurant.address %>
        </p>
        <p class="card-text">
        <%= restaurant.phone_number %>
        </p>
        <%= link_to 'Order', restaurant_path(restaurant), class:'btn btn-primary' %>
      </div>
    </div>
  </div>
<% end %>
